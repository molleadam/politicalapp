        <activity android:name="GalleryScrollerActivity"></activity>
        <activity android:name="YouTubeActivity"></activity>
        <activity android:name="BlogActivity"></activity>
        <activity android:name="ArticlActivity"></activity>
        <activity android:name="ArticlDetailsActivity"></activity>
        
        <activity android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
       
        
        <!-- Used for install referrer tracking -->
